body {
  text-align:center;
  font-family:Helvetica;
  margin:10px;
<% if widget %>
  background-color:transparent;
<% else %>
  background-color:rgb(220,223,229);
<% end %>
}
input, output {
  -webkit-appearance: none;
  font-size: 1.2em;
  width: 310px;
}
input {
  float:right;
  border-radius:0 10px 0 0;
  height:44px;
  background-color:white;
  border:1px solid rgb(171,171,171);
  padding: 0 0 0 0.5em;
  margin:0 1em 0 0;
/*  -webkit-transition:background-color 0.3s ease-in-out;*/
  
  box-sizing: content-box;
  -moz-box-sizing: content-box;
  -webkit-box-sizing: content-box;
}

output {
  display:block;
  width:auto;
  border-radius: 0px 0px 10px 10px;
  height:44px;
  line-height:44px;
  text-align:right;
  background-color:#ddd;
  color:#ddd;
  border:1px solid rgb(171,171,171);
  border-top:none;
  padding: 0 0.5em 0 0.5em;
  margin:0 1em 0 1em;
  &:not(:hover) {
    -webkit-user-select: none;
    user-select: none;
    &::selection {
      background:#ddd;
      color:#ddd;
    }
  }
  &:empty {
    color:black;
    background-color:white;
  }
  /*  box-sizing: border-box;*/
  /*  -webkit-appearance: textfield;*/
/*  margin:2px 0;*/
}
output.show-me {
  color:black;
  background-color:white;
}
label {
  font-size:1.2em;
  display:block;
  border-radius:10px 0 0 0;
  background-color:white;
  border:1px solid rgb(171,171,171);
  width:80%;
  height:44px;
  line-height:44px;
  text-align:left;
  font-weight:bold;
  text-indent:1em;
  margin:0 0 0 1em;
}
/*label[for=password] {
  height:44px;
}
*/
label[for=password],input[type=password] {
  border-radius:0;
  border-top:none;
}
.title {
  margin:-10px 1em 1em 1em;
  border-radius:0 0 10px 10px;
  font-weight:bold;
  height:44px;
  line-height:44px;
  color:rgb(113,120,128);
  font-size:1.2em;
  background-color:rgb(244,245,247);

  background-image: -webkit-linear-gradient(top, rgb(244,245,247), rgb(168,172,185));
  background-image: -webkit-gradient(linear, left top, left bottom, from(rgb(244,245,247)), to(rgb(168,172,185)));


  text-shadow:#eed 0px 1px 0px;
  box-shadow:black 0 1px 4px;
  -webkit-box-shadow:black 0 1px 4px;
}
input:focus {
  outline: none;
  background-color:#eee;
}
a {
  font-size:1em;
  color:rgb(76,86,108);
  text-shadow:white 0px 1px 0px;
  text-decoration:none;
}
form {
  margin:0 0 10px 0;
}
@media screen and (max-width: 500px) {
  input {
    float:none;
    display:block;
    -webkit-appearance: none;
    width: 100%;
    font-size: 1.2em;
    border:1px solid rgb(171,171,171);
    border-radius: 0;
/*    border-color: rgb(171,171,171);*/
    height:45px;
    line-height:normal;
    margin:0;

    box-sizing: border-box;
    -moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
  }
  input[type=url] {
    border-radius: 10px 10px 0px 0px;
  }
  input[type=password] {
    position:relative;
    top:-1px;
    border-top:1px solid rgb(171,171,171);
<% if widget %>
    border-radius: 0px 0px 10px 10px;
<% end %>
  }
  output {
    padding-right:10px;
    padding-left:10px;
    margin:0;
    font-size: 1.2em;
    display:block;
    height:45px;
    width: auto;
    -webkit-appearance: none;
    border-radius: 0px 0px 10px 10px;
    border:1px solid rgb(171,171,171);
    background-color:#CBD2D8;
    color:#CBD2D8;
    position:relative;
    top:-2px;
    line-height:45px;
    text-align:left;
    &:not(:hover) {
      -webkit-user-select: none;
      user-select: none;
      &::selection {
        background-color:#CBD2D8;
        color:#CBD2D8;
      }
    }
    &:empty {
      color:black;
      background-color:white;
    }
  }
  input:focus {
    background-color:white;
  }
  div.title {
    background-color:rgb(109,132,162);
    background-image: -webkit-linear-gradient(top, rgb(176,188,205), rgb(136,155,179) 50%, rgb(129,149,175) 50%, rgb(109,132,162));
    background-image: -webkit-gradient(linear, left top, left bottom, from(rgb(176,188,205)), to(rgb(109,132,162)), color-stop(0.5, rgb(136,155,179)), color-stop(0.5, rgb(129,149,175)));
<% if widget %>
    border-radius: 10px 10px 0 0;
    margin: 0;
<% else %>
    border-radius:0;
    margin:-10px -10px 10px -10px;
<% end %>
    -webkit-user-select: none;
    -khtml-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    -o-user-select: none;
    user-select: none;
    color:white;
    border-bottom: 1px solid rgb(45,54,66);
    border-top: 1px solid rgb(203,213,223);
    text-shadow:#444 0px -1px 0px;
    box-shadow:none;
    -webkit-box-shadow:none;
  }
  label {
    display:none;
  }
<% if widget %>
  #wrapper {
    border-radius: 10px;
    box-shadow: black 0 2px 10px;
    -webkit-box-shadow: black 0 2px 10px;
  }

  div.bg {
    border-radius: 0 0 10px 10px;
    padding:10px;
    padding-bottom:40px;
    background-image: url('images/pattern.svg');
  }
<% else %>
  body {
    background-image:url("data:image/svg+xml;base64,<%=[haml('pattern.svg'.to_sym)].pack('m0')%>");
  }
<% end %>
}
